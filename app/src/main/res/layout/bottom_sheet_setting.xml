<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:padding="16dp">

    <Button
        android:id="@+id/btn_application_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF9F0A"
        android:text="@string/application_setting"
        android:textColor="@color/colorOnPrimary"
        android:textSize="16sp"
        app:cornerRadius="30dp"
        app:icon="@drawable/ic_application"
        app:iconGravity="start"
        app:iconSize="20dp"
        app:iconTint="@color/colorOnPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 功能开关按钮 -->
    <Button
        android:id="@+id/btn_function_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="#FF9F0A"
        android:text="@string/function_switch"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:cornerRadius="30dp"
        app:icon="@drawable/ic_list"
        app:iconGravity="start"
        app:iconSize="20dp"
        app:iconTint="@color/colorOnPrimary"
        app:layout_constraintEnd_toEndOf="@+id/btn_application_setting"
        app:layout_constraintStart_toStartOf="@+id/btn_application_setting"
        app:layout_constraintTop_toBottomOf="@+id/btn_application_setting" />

    <!-- 权限管理按钮 -->
    <Button
        android:id="@+id/btn_permission_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="#FF9F0A"
        android:text="@string/open_accessibility_service_btn"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:cornerRadius="30dp"
        app:icon="@drawable/ic_permission"
        app:iconGravity="start"
        app:iconSize="20dp"
        app:iconTint="@color/colorOnPrimary"
        app:layout_constraintEnd_toEndOf="@+id/btn_function_switch"
        app:layout_constraintStart_toStartOf="@+id/btn_function_switch"
        app:layout_constraintTop_toBottomOf="@+id/btn_function_switch" />

</androidx.constraintlayout.widget.ConstraintLayout>